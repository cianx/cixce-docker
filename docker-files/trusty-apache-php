FROM ubuntu:trusty
MAINTAINER cian@cixce.com

RUN apt-get update \
 && apt-get install -y -q --no-install-recommends \
    curl \
    ca-certificates \
    build-essential \
    libkrb5-dev \
    libssl-dev \
    apache2 \
    libapache2-mod-php5 \
    php5 \
    php5-cli \
    php5-mysqlnd \
    php5-gd \
    php5-imagick \
    php5-curl \
    php5-mcrypt \
    php5-xmlrpc \
    librsvg2-bin \
    inkscape \
    imagemagick \
    libmagickcore5-extra \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/* \
 && groupadd -g 6879 cixce \
 && useradd -u 6879 -g 6879 -ms /bin/bash cixce \
 && usermod -aG www-data cixce \
 && mkdir /app \
 && chown cixce.cixce /app \
 && rm -rf /var/www/html \
 && ln -s /app /var/www/html

# && apt-get -y remove --purge *-dev \


WORKDIR /app

EXPOSE 80
EXPOSE 443

CMD ["apachectl", "-D", "FOREGROUND"]
